# TrackTraster Environment Configuration - EXAMPLE
# Copia este archivo como .env y configura tus valores

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOSTNAME=localhost
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=tracktraster_db
DB_DRIVER=mysqli
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
APP_BASE_URL=http://localhost/tracktraster/
APP_INDEX_PAGE=
APP_SESSION_EXPIRATION=7200
APP_REMEMBER_ME_EXPIRATION=2592000
APP_ENCRYPTION_KEY=your-32-character-secret-key-here!
APP_CSRF_PROTECTION=true
APP_CSRF_TOKEN_NAME=csrf_token
APP_CSRF_COOKIE_NAME=csrf_cookie

# ===========================================
# SPOTIFY API CONFIGURATION
# ===========================================
# Para obtener estas credenciales:
# 1. Ve a https://developer.spotify.com/dashboard
# 2. Crea una nueva aplicación
# 3. Copia Client ID y Client Secret
SPOTIFY_CLIENT_ID=tu_spotify_client_id
SPOTIFY_CLIENT_SECRET=tu_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost/tracktraster/auth/spotify/callback
SPOTIFY_ENABLED=false

# ===========================================
# DEEZER API CONFIGURATION
# ===========================================
# Deezer no requiere credenciales para búsquedas públicas
DEEZER_ENABLED=true

# ===========================================
# LAST.FM API CONFIGURATION
# ===========================================
# Para obtener estas credenciales:
# 1. Ve a https://www.last.fm/api/account/create
# 2. Crea una nueva aplicación
# 3. Copia API Key y API Secret
LASTFM_API_KEY=tu_lastfm_api_key
LASTFM_API_SECRET=tu_lastfm_api_secret
LASTFM_ENABLED=false

# ===========================================
# SOUNDCLOUD API CONFIGURATION
# ===========================================
# Para obtener estas credenciales:
# 1. Ve a https://soundcloud.com/you/apps
# 2. Crea una nueva aplicación (si está disponible)
# 3. Copia Client ID
# NOTA: La API de SoundCloud está limitada
SOUNDCLOUD_CLIENT_ID=tu_soundcloud_client_id
SOUNDCLOUD_ENABLED=false

# ===========================================
# YOUTUBE MUSIC API CONFIGURATION
# ===========================================
# Para obtener estas credenciales:
# 1. Ve a https://console.developers.google.com/
# 2. Crea un proyecto y habilita YouTube Data API v3
# 3. Crea credenciales de API Key
YOUTUBE_MUSIC_API_KEY=tu_youtube_api_key
YOUTUBE_MUSIC_ENABLED=false
